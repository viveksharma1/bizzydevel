
@{
    ViewBag.Title = "JournalEntry";
    Layout = null;
}

<div class="FlexPopup" style="display:block" ng-init="model = {}">
    <div class="flexheader lightblue">
        <label style="float:left;padding:15px ">

            <strong><span style="font-size:20px;  color:#585655">Journal Entry </span></strong>
        </label>
        <label style="float:right;padding:15px ">

            <strong style="font-size:20px"><a href="" ng-click="addInventry()"><i class="fa fa-times"></i></a></strong>


        </label>
    </div>
    <!-- addInventryModal -->
    <div id="addInventryModal7" class="modal fade" role="dialog">
        <div class="modal-admin">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body" style="background-color:#525DB0">
                    <label style="color:#FFFFFF">Do you want to leave without saving</label>
                </div>



                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm btn bg-purple" data-dismiss="modal" style="float:left">No</button>
                    <button type="button" class="btn btn-secondary btn-sm btn-success" ng-click="goBack()" data-close="modal">Yes</button>
                </div>
            </div>

        </div>
    </div>
    <div id="addInventryModal1" class="modal fade" role="dialog">
        <div class="modal-alert">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body fa fa-check-circle fa-1x co-ok" style="background-color:#FFFFFF">
                    <label style="color:#0A0503">Bill Saved</label>
                </div>
            </div>

        </div>
    </div>

    <div id="billNoAlert" class="modal fade" role="dialog">
        <div class="modal-alert">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body fa fa-warning" style="background-color:#FFFFFF">
                    <label style="color:#ff0000">Bill No All Ready Exist</label>
                </div>
            </div>

        </div>
    </div>

    <div class="flexcontainer">
        <div class="lightblue bluebrdr content" style="padding:10px 0px">

            <div class="col-sm-2">
                <h4 class="tabheading font_11">Journal date</h4>

                <div class='input-group date' id='Journaldt'>
                    <input type='text' class="form-control" placeholder="dd/mm/yyyy" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

            </div>
            

            <div class="col-sm-2 pull-right">
                <h4 class="tabheading font_11">Journal no.</h4>
                <input type="text" class="form-control" />

            </div>

        </div>


        <div class="col-sm-12">
            <h4 data-toggle="collapse" data-target="#ItemDetail2" class="cursor pull-left" style="margin-top: 15px; margin-bottom: 0px;">
                <i class="fa fa-caret-right"></i> Item details
            </h4>
            <hr style="float:left; width:100%; margin-bottom:10px; margin-top: 10px;" />
            <table class="table table-bordered wordbreak" fixed-header style="border-collapse: collapse; height:285px">
                <thead>
                    <tr style="background:rgb(243, 245, 248)">
                        <th style="vertical-align:middle; padding:5px">
                            <ui-select ui-tree-select ng-model="remarks.selected.name" id="countryCode"
                                       ui-select-focuser
                                       theme="selectize">
                                <ui-select-match placeholder="Account">
                                    <span class="selectuiTable">
                                        <span>{{ $select.selected.name|| $select.search }}</span>
                                        <a class="btn btn-xs btn-link pull-right" ng-click="clear($event, $select)"><i class="glyphicon glyphicon-remove"></i></a>
                                    </span>
                                </ui-select-match>
                                <ui-select-choices repeat="person.name as person in RRMARKS  | filter: $select.search" refresh="refreshResults($select,'RRMARKS')" refresh-delay="2">
                                    <div>
                                        <span ng-bind-html="person.name | highlight: $select.search"></span>
                                    </div>
                                </ui-select-choices>
                            </ui-select>
                        </th>
                        <th style="vertical-align:middle; padding:5px">
                            <input type="text" class="form-control" placeholder="Description" />
                        </th>
                        <th style="vertical-align:middle; padding:5px">
                            <input type="text" class="form-control text-right" placeholder="Debits" />
                        </th>
                        <th style="vertical-align:middle; padding:5px">
                            <input type="text" class="form-control text-right" placeholder="Credits" />
                        </th>

                        <th style="text-align:center"><button type="button" class="btn btn-sm btn-primary">Add</button></th>
                    </tr>
                    <tr>
                        <th style="color:#000;">Account</th>
                        <th style="color:#000;">Description</th>
                        <th style="text-align:right; color:#000; width:150px">Debits</th>
                        <th style="text-align:right; color:#000; width:150px">Credits</th>
                        <th>&nbsp;</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>CLEARING & FORWARDING EXP.</td>
                        <td>C.R. S.S. COILS3</td>
                        <td style="text-align:right">666,266.00</td>
                        <td style="text-align:right">&nbsp;</td>
                        <td class="text-center Count" value="0.00"><a class="edit" title="Edit"> <i class="fa fa-times-circle cursor RemoveTR" style="font-size:16px"></i></a></td>
                    </tr>
                    <tr>
                        <td>CLEARING & FORWARDING EXP.</td>
                        <td>C.R. S.S. COILS3</td>
