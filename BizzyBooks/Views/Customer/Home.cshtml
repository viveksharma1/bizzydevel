<script>
    $(document).ready(function () {



    $('#menutoggle').click(function () {
    $("#wrapper").toggleClass("toggled");
    });
    $('#flyoutDate').hide();
    $('#flyoutCompany').hide();
    $('#flyout').hide();
    $('#flyoutChange').hide();

    $(".addrotate").click(function (e) {
    $(this).toggleClass("down");
    $('#flyout').fadeToggle("slow", "linear");
    $('#flyoutCompany').hide();
    $('#flyoutChange').hide();
    });

    $('.sub-menu').click(function () {
        $('.leftsubmenu').slideDown();
    });


    $("#CompanyInfo").click(function (e) {
       $('#flyoutCompany').fadeToggle("slow", "linear");
       $('#flyout').hide();
       $('#flyoutChange').hide();
       $('#flyoutDate').hide();
    });


    $("#Changename").click(function (e) {
        $('#flyoutChange').fadeToggle("slow", "linear");
        $('#flyout').hide();
        $('#flyoutCompany').hide();
    });


    $("#Datefilter").click(function (e) {
        $('#flyoutDate').fadeToggle("slow", "linear");
        $('#flyout').hide();
        $('#flyoutCompany').hide();
    });

    $('.flytopbar').click(function (e) {
        e.stopPropagation();
    });


    $('html').click(function () {
        $('#flyout').hide();
        $('#flyoutCompany').hide();
        $('#flyoutChange').hide();
        $('#flyoutDate').hide();
    });


    });
</script>

