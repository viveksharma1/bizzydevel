<div class="col-sm-12" style="padding:10px">
    <input type="text" class="form-control pull-right" placeholder="Filter by name" ng-model="search" style="width:250px; float:left" />
   

    <table class="table table-condensed account-hover  " style="margin-top:10px; width:100%; float:left;table-layout:fixed; border:none">
        <thead>
            <tr>
                <th style="width:30px;color:#1D4B8F">&nbsp;</th>
                <th style="color:#1D4B8F">Date</th>
                <th style="color:#1D4B8F">Type</th>
                <th style="color:#1D4B8F">Ref No.</th>
                <th style="color:#1D4B8F">State</th>
                <th style="text-align:right;color:#1D4B8F">Amount</th>
              
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="data in voucherTransaction  | filter:search" class="cursor" ng-disabled='true' ng-click="openTransaction(data._id,data.type)">
                <td style="color:#1474AE"><b>{{$index + 1}}.</b></td>
                <td><div class="datelink cursor text-primary padding">{{data.date |date:'dd/MM/yyyy'}}</div></td>
                <td style="color:#1D4B8F">{{data.type}}</td>
                <td>{{data.vochNo}}</td>
                <td style="color:#FF785D">{{data.state}} {{data.deleteDate | date:"medium"}}</td>
                <td style="text-align:right"><b>{{data.amount | number:2}}</b></td>
               
            </tr>
           
          
          
        </tbody>
    </table>


</div>

