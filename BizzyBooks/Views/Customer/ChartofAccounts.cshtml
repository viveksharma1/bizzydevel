
@{
    ViewBag.Title = "ChartofAccounts";
    Layout = null;
}
<div class="panel lightblue bluebrdr marginbottom">
    <div class="panel-heading">
        <strong class="heading">Chart of Accounts</strong>
        <div class="pull-right">
            <button class="btn btn-sm btn-default" type="button">Run Report</button>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm" ng-click="Accountbtn()"id="NewCustomerCreate"> New</button>
                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#/Customer/Import">Import Customers</a></li>

                </ul>
            </div>
        </div>
        </div>
    </div>
<div class="col-sm-12" style="padding:10px">
    <input type="text" class="form-control" placeholder="Filter by name" ng-model="search"  style="width:250px; float:left"/>
    <div class="pull-right" style="margin-top:5px">
        <i class="fa fa-pencil tableicon" title="Batch Edit"></i>
        <i class="fa fa-print tableicon" title="Print List"></i>
        <i class="fa fa-gear tableicon" title="Settings"></i>
    </div>

    <table class="table-bordered table-condensed table-hover " style="margin-top:10px; width:100%; float:left;table-layout:fixed">
        <thead>
            <tr>
                <th>NAME</th>
                <th>GROUP</th>
                
                <th style="text-align:right">BALANCE</th>              
                <th style="text-align:center">ACTION</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="data in account |filter:search">
                <td>{{data.accountName}}</td>
                <td>{{data.Under}} <span style="color:darkblue">({{data.type}})</span></td>
             
                <td style="text-align:right">{{data.credit- data.debit |number : fractionSize}}</td>
             
                <td style="text-align:right; width:150px">
                    <button type="button" class="editbtn"><a ui-sref="Customer.accountHistory({accountName:data.accountName})" style="font-weight:bold">Account History</a></button>
                    <class class="linkseparator" style="margin-top:4px; margin-right:0px"></class>
                    <div class="btn-group editcaret">
                        <i class="fa fa-caret-down cursor" dropdown-toggle" data-toggle="dropdown"></i>
                        <ul class="dropdown-menu editdrpdwn" role="menu" style="left:-135px">

                            <li><a ui-sref="">Edit</a></li>
                            <li><a href="">Delete</a></li>
                            <li><a href="">Run Report</a></li>
                           
                        </ul>

                    </div>
                </td>
            </tr>
        </tbody>
    </table>
   

</div>
