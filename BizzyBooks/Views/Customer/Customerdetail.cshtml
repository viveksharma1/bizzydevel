                                <div class="info">
                                    <div class="tableCell">
                                        <div class="tableCell labelCell">
                                            <span class="label">Preferred delivery method</span>
                                        </div>
                                        <div class="tableCell">
                                            <span class="value">
                                                None
                                            </span>
                                        </div>
                                    </div>
